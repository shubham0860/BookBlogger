<div id="grid"></div>
<script>
    $("#grid").kendoGrid({
        height: 400,
        columns: [
            {field: "ISBN"},
            {field: "BookName"},
            {field: "Price"},
            {field: "Details"},
            {field: "ImageUrl"},
            {field: "DownloadUrl"},
            {field:"AuthorName"},
            {field: "CreatedDateTime"},
            {field: "UpdatedDateTime"}
        ],
        dataSource: {
            type: "webapi", 
            transport: {
                idField: "ID",
                read: {
                     url: "/api/Books"
                }
			},
            schema: {
                data: "Data",
                total: "Total", 
                errors: "Errors",
                model: {
                    id: "ID",
					fields: {
						ID: { type: "number"},
						ISBN: { type: "string"},
						BookName: { type: "string"},
						Price: { type: "number"},
						Details: { type: "string"},
						ImageUrl: { type: "string"},
                        DownloadUrl: { type: "string" },
                        AuthorName: { type:"string" },
						CreatedDateTime: { type: "date"},
